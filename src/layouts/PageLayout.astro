---
import MainLayout from "./MainLayout.astro";

const {title} = Astro.props;
const defaultTitle = "New Page (Add title)"
---

<MainLayout pageTitle={title}>
    <div class="flex flex-col gap-5 p-5">
        <h2 class="text-xl font-bold text-primary-light dark:text-primary-dark">{title ?? defaultTitle}</h2>
        <slot></slot>
    </div>
</MainLayout>