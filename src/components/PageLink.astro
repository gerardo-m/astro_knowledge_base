---
const {url, name} = Astro.props;
const nName:string = name || "";
const actualName:string = nName.length < 2 ? nName.toUpperCase() : nName.charAt(0).toUpperCase() + nName.slice(1);
---

<a href={url}>
    <li class="h-10 content-center hover:bg-primary-300 hover:text-secondary-900 dark:hover:bg-primary-900 dark:hover:text-secondary-light sm:h-full sm:px-6">
        {actualName}
    </li>
</a>